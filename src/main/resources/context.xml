<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"

	default-lazy-init="true"
	>

	
	<bean id="t1000" class="com.htp.lab.spring.course.impls.robot.ModelT1000"
		p:hand-ref="toshibaHand"
		p:leg-ref="toshibaLeg"
		p:head-ref="toshibaHead">
		<constructor-arg value="silver" index="0" type="String"/>
		<constructor-arg value="true" index="2" type="boolean"/>
		<constructor-arg value="2006" index="1" type="int"/>
		
		<!-- property name="hand" ref="toshibaHand" />
		<property name="head" ref="toshibaHead" />
		<property name="leg" ref="toshibaLeg" / -->
	</bean>
	
	<bean id="t1000Empty" 
		class="com.htp.lab.spring.course.impls.robot.ModelT1000"
		scope="prototype"
		>
		<constructor-arg ref="sonyHand"/>
		<constructor-arg ref="sonyLeg"/>
		<constructor-arg ref="toshibaHead"/>

	</bean>

	<bean id="sonyHand" class="com.htp.lab.spring.course.impls.sony.SonyHand"/>
	<bean id="sonyHead" class="com.htp.lab.spring.course.impls.sony.SonyHead" />
	<bean id="sonyLeg" class="com.htp.lab.spring.course.impls.sony.SonyLeg"/>

	<bean id="toshibaHand" class="com.htp.lab.spring.course.impls.toshiba.ToshibaHand"/>
	<bean id="toshibaHead" class="com.htp.lab.spring.course.impls.toshiba.ToshibaHead"/>
	<bean id="toshibaLeg" class="com.htp.lab.spring.course.impls.toshiba.ToshibaLeg"/>
	
	<bean class="com.htp.lab.spring.course.main.MyBeanPostProcessor"></bean>
	
</beans>
