<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"

	default-lazy-init="true"
	>

	<import resource="toshiba.context.xml"/>
	<import resource="sony.context.xml"/>
	<import resource="db_context.xml" />
	
	
	<bean id="t1000" class="com.htp.lab.spring.course.impls.robot.ModelT1000"
		p:hand-ref="toshibaHand"
		p:leg-ref="toshibaLeg"
		p:head-ref="toshibaHead"
		>
		<constructor-arg value="silver" index="0" type="String"/>
		<constructor-arg value="true" index="2" type="boolean"/>
		<constructor-arg value="2006" index="1" type="int"/>
		
		<!-- property name="hand" ref="toshibaHand" />
		<property name="head" ref="toshibaHead" />
		<property name="leg" ref="toshibaLeg" / -->
	</bean>
	
	<!-- перез загрузкой bean будет проинициализирован databaseBean  -->
	<bean id="t1000Empty" 
		class="com.htp.lab.spring.course.impls.robot.ModelT1000"
		scope="prototype"
		depends-on="databaseBean, t1000"
		>
		<constructor-arg ref="sonyHand"/>
		<constructor-arg ref="sonyLeg"/>
		<constructor-arg ref="toshibaHead"/>

	</bean>


	<bean class="com.htp.lab.spring.course.main.MyBeanPostProcessor"></bean>
	
</beans>
